@using Core.Enums
@using Core.DTOs
@model Core.DTOs.CreateBookRequestModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Book";
}

<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Add Book</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to add a book.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="ISBN" class="control-label"></label>
                            <input asp-for="ISBN" class="form-control" />
                            <sp an asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Publisher" class="control-label"></label>
                            <input asp-for="Publisher" class="form-control" />
                            <span asp-validation-for="Publisher" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="PublicationDate" class="control-label"></label>
                            <input asp-for="PublicationDate" class="form-control" />
                            <span asp-validation-for="PublicationDate" class="text-danger"></span>
                        </div> 
                        <div class="form-group col-sm-6">
                            <label asp-for="Language" class="control-label"></label>
                            <input asp-for="Language" class="form-control" />
                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="NumberOfPages" class="control-label"></label>
                            <input asp-for="NumberOfPages" class="form-control" />
                            <span asp-validation-for="NumberOfPages" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="BookImage" class="control-label"></label>
                            <input asp-for="BookImage" class="form-control" />
                            <span asp-validation-for="BookImage" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="BookPDF" class="control-label"></label>
                            <input asp-for="BookPDF" class="form-control" />
                            <span asp-validation-for="BookPDF" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="AccessibilityStatus" class="control-label"></label>
                            <select asp-for="AccessibilityStatus" class="form-control">
                                Select User Type
                                <option value="@BookAccessibilityStatus.FREE"> Free</option>
                                <option value="@BookAccessibilityStatus.NOTFREE"> Not Free</option>
                            </select>
                            <span asp-validation-for="AccessibilityStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="AvailabilityStatus" class="control-label"></label>
                            <select asp-for="AvailabilityStatus" class="form-control">
                                Select User Type
                                <option value="@BookAvailabilityStatus.AVAILABLE"> Available</option>
                                <option value="@BookAvailabilityStatus.UNAVAILABLE"> Unavailable</option>
                            </select>
                            <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label asp-for="Authors" class="control-label"></label>
                            <select asp-for="Authors" class="form-control" asp-items="ViewBag.Authors" required>
                                <option value="">--Select Author--</option>
                            </select>
                        </div>
                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label asp-for="Categories" class="control-label"></label>
                            <select asp-for="Categories" class="form-control" asp-items="ViewBag.Categories" required>
                                <option value="">--Select Author--</option>
                            </select>
                        </div>
                    </div>

                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>
                </form>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

