
@model IEnumerable<Core.Models.Category>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin";
}



<div class="card-header" style="background-color:darkblue;">
    <div class="card-title">
        <h1 class="text-center">Users</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            


            <th>
                Update
            </th>
            <th>
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Name)
            </td>



            <td>
                <a asp-action="Update" asp-route-id="@user.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@user.Id">Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<button style="background-color:whitesmoke;"><a asp-controller="Category" asp-action="Create">Create</a> </button>
