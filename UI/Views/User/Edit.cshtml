@using Core.Enums
@model Core.DTOs.UserUpdateDTO

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin";
}




<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Register</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to Update this account.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control">
                                Select User Type
                                <option value="@AccountStatus.ACTIVE"> ACTIVE</option>
                                <option value="@AccountStatus.BLACKLISTED"> BLACKLISTED</option>
                                <option value="@AccountStatus.CANCELED">CANCELED</option>
                                <option value="@AccountStatus.CLOSED"> CLOSED</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="UserType" class="control-label"></label>
                            <select asp-for="UserType" class="form-control">
                                Select User Type
                                <option value="@UserType.LibraryUser"> LibraryUser</option>
                                <option value="@UserType.Librarian"> Librarian</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
            
                </form>
            </div>
        </div>

    </div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
